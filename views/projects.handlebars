<div id="main">
    <div>
        <h1>My Earlier Projects</h1>

        {{#if hasDatabaseError}}
        <div>
            Sorry, there was a problem with the database <br />
            {{theError}}
        </div>
        {{else}}
            {{#each projects}}
                <div>
                    <div class="card">
                      <div class="centerVert padding"><img class="projectsImg" src="{{pimgURL}}" alt="{{pimgURL}}" /></div>
                      <div class="centerVert padding">
                         <h1>{{pname}}</h1>
                         <p> </p>
                         <div>{{pyear}} - {{ptype}}</div>
                      </div>
                    </div>
                </div>
           {{/each}}
        {{/if}}
  </div>
</div>