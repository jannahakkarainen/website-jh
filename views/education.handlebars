<div id="main">
    <div>
        <h1>My Education</h1>
        {{#if hasDatabaseError}}
        <div>
            Sorry, there was a problem with the database <br />
            {{theError}}
        </div>
        {{else}}
            {{#each education}}
                <div class="education">
                    <p class="text">{{ename}}</p>
                    <p>Type: {{edesc}}, {{ehp}} hp </p>
                   
                </div>
           {{/each}}
        {{/if}}
  </div>
</div>
